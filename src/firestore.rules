
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isSuperAdmin() {
        return isSignedIn() && request.auth.token.email in ['kavinvnayakam@gmail.com', 'media@shreevarma.org'];
    }

    function isHealthcareAdmin() {
        return isSignedIn() && request.auth.token.email in ['healthcare@shreevarma.org'];
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if isSuperAdmin() || isHealthcareAdmin();

      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if false; 
      }
    }

    match /users/{userId} {
      allow read, update, delete: if isOwner(userId) || isSuperAdmin();
      allow create: if isOwner(userId);
      allow list: if isSuperAdmin();

      match /orders/{orderId} {
        allow read, write: if isOwner(userId) || isSuperAdmin() || isHealthcareAdmin();
      }
    }
    
    match /consultations/{consultationId} {
      // Allows Patient to create their own consultation record
      allow create: if isSignedIn() && request.resource.data.patientId == request.auth.uid;
      
      // Allows Patient, assigned Doctor, or Admins to read details
      allow read: if isSuperAdmin() || isHealthcareAdmin() || 
                     (isSignedIn() && (resource.data.patientId == request.auth.uid || resource.data.doctorId == request.auth.uid));
      
      // Allows only the assigned Doctor or Admins to update (e.g., claim, add notes)
      allow update: if isSuperAdmin() || isHealthcareAdmin() || (isSignedIn() && request.auth.uid == resource.data.doctorId);

      allow delete: if isSuperAdmin();
    }
    
    // Collection Group Rule for Admin Dashboards to list all orders
    match /{path=**}/orders/{orderId} {
      allow list: if isSuperAdmin() || isHealthcareAdmin();
    }
    
    match /doctors/{doctorId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    match /practitioners/{practitionerId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /roles_admin/{userId} {
        allow read, write: if isSuperAdmin();
    }

    match /mail/{mailId} {
      allow create: if isSignedIn();
      allow read, update, delete: if false;
    }

    match /counters/{counterId} {
        allow read, write: if isSuperAdmin();
    }
    
    // Rule for the temporary collection used during checkout
    match /pending_orders/{orderId} {
      // Only an authenticated user can create a pending order for themselves
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Only admins should be able to read/manage these, primarily for debugging.
      allow read, update, delete: if isSuperAdmin() || isHealthcareAdmin();
    }
  }
}
