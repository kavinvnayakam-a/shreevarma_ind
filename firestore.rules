
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.email in ['kavinvnayakam@gmail.com', 'media@shreevarma.org'];
    }

    function isHealthcareAdmin() {
      return isSignedIn() && request.auth.token.email in ['healthcare@shreevarma.org'];
    }

    // --- RULES ---

    match /products/{productId} {
      allow read, list: if true;
      allow write: if isSuperAdmin() || isHealthcareAdmin();

      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if false; 
      }
    }

    match /users/{userId} {
      allow read, update, delete: if isOwner(userId) || isSuperAdmin();
      allow create: if isOwner(userId);
      allow list: if isSuperAdmin();

      match /orders/{orderId} {
        allow read, write: if isOwner(userId) || isSuperAdmin() || isHealthcareAdmin();
      }
    }
    
    match /consultations/{consultationId} {
        // PRIVACY SHIELD: Only the patient, the doctor, or admins can see the video room details
        allow read: if isSuperAdmin() || isHealthcareAdmin() || 
                     (isSignedIn() && (request.auth.uid == resource.data.patientId || request.auth.uid == resource.data.doctorId));
        
        // Ensure patientId matches your frontend field name
        allow create: if isSignedIn() && request.resource.data.patientId == request.auth.uid;
        
        allow update: if isSuperAdmin() || isHealthcareAdmin() || (isSignedIn() && request.auth.uid == resource.data.doctorId);

        allow delete: if isSuperAdmin();
    }
    
    // Collection Group Rule for Admin Dashboards
    match /{path=**}/orders/{orderId} {
      allow list: if isSuperAdmin() || isHealthcareAdmin();
    }
    
    match /doctors/{doctorId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    match /practitioners/{practitionerId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /roles_admin/{userId} {
      allow read, write: if isSuperAdmin();
    }

    match /mail/{mailId} {
      allow create: if isSignedIn();
      allow read, update, delete: if false;
    }

    match /counters/{counterId} {
        allow read, write: if isSuperAdmin();
    }
  }
}
